<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/show_student_info_app_bar"></include>
    <LinearLayout
        android:layout_below="@+id/show_student_info_app_bar"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="4sp"
                android:id="@+id/shRoll"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Roll-no : "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/showRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shRoll"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLines="2"
                android:textSize="25dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="4sp"
                android:id="@+id/shName"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Name : "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/showName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shName"
                android:layout_weight="4"
                android:cursorVisible="false"
                android:inputType="text"
                android:maxLines="2"
                android:textSize="25dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="4sp"
                android:id="@+id/shYear"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Year : "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/showYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shYear"
                android:cursorVisible="false"
                android:inputType="text|textCapCharacters"
                android:maxLines="2"
                android:textSize="25dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="4sp"
                android:id="@+id/shAdd"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Address : "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/showAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shAdd"
                android:cursorVisible="false"
                android:inputType="text"
                android:maxLines="2"
                android:textSize="25dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="4sp"
                android:id="@+id/shPh"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Ph-no : "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/showPh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shPh"
                android:cursorVisible="false"
                android:inputType="phone"
                android:maxLines="2"
                android:textSize="25dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3">

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/showUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_color"
            android:text="Update"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/showDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_color"
            android:text="Delete"
            android:textColor="@android:color/white" />

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/showOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_color"
            android:text="OK"
            android:textColor="@android:color/white" />


    </LinearLayout>

</RelativeLayout>